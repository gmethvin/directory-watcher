<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{"yyyy-MM-dd HH:mm:ss.SSS", UTC} [%-5level] %logger{36} - %message%n%xException%n</pattern>
    </encoder>
  </appender>
  <logger name="io.methvin" level="DEBUG" />
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
